!!!
/[if lt IE 8] <html class="no-js ie7" lang="en">
/[if IE 8] <html class="no-js ie8" lang="en">
/[if IE 9] <html class="no-js ie9" lang="en">
= surround "<!--[if gt IE 9]><!--><html class='no-js' lang='en'><!--<![endif]-->", "</html>" do
  %head
    %meta( charset="utf-8" )
    %meta( name="viewport" content="width=device-width, initial-scale=1.0" )
    / Use title if it's in the page YAML frontmatter
    %title= "#{current_resource.data.title} | #{data.info.site.title}" || "#{data.info.site.title}"
    %link{:rel => "shortcut icon", :href => config[:http_prefix] + "images/FavIcon.ico"}

    = javascript_include_tag "modernizr"
    = partial "partials/gtm-head"
    = partial "partials/css"

  %body{ :class => page_classes }
    = partial "partials/gtm-body"
    = partial "partials/bg-image"
    .height
      .container
        .row
          .twelve.large-12.columns
            = partial "partials/logo"
        .row.wrap-nav
          .twelve.large-12.columns
            = partial "partials/nav-topbar"
        .row.wrap
          .row
            .twelve.large-12.columns#breadcrumb
              = partial "partials/nav-breadcrumbs"
          .row
            .six.push-three.medium-6.medium-push-3.columns.main-content
              = yield
            .three.push-three.medium-3.medium-push-3.columns.sidebar-right
              / = partial "partials/sidebar-right"
            .three.pull-nine.medium-3.medium-pull-9.columns.sidebar-left
              = partial "partials/nav-sidebar"
      %footer.footer
        = partial "partials/footer"

    = partial "partials/js"

    = javascript_include_tag "app"
