- data.faculty.each do |f|
  .row
    .small-6.large-3.columns
      %img{:src => f.photo, :alt => f.fullname, :style => "width: 100px;"}
      %p
        %strong
          = f.fullname
        %br
        = mail_to f.email
        %br
        = f.addr
        %br
        = f.website
    .small-6.large-3.columns
      %p
        %br
        = f.affil
    .small-12.large-6.columns
      %p
        = f.desc
      %p
        - f.areas.each do |a|
          %span.label
            = link_to a.keys[0], config[:http_prefix] + a.values[0]

  %hr